---
const { title = "Erika Gonzalez — Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style is:global>
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial;
        color: #111;
        background: #fff;
      }

      main {
        max-width: 980px;
        margin: 0 auto;
        padding: 26px 20px 56px;
      }

      header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 16px;
        flex-wrap: wrap;
        padding: 18px 0 6px;
      }

      .brand {
        font-weight: 800;
        text-decoration: none;
        color: inherit;
        letter-spacing: -0.01em;
      }

      nav {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: flex-end;
      }

      .tab {
        display: inline-block;
        padding: 10px 14px;
        border-radius: 999px;
        border: 1px solid rgba(0, 0, 0, 0.18);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        color: inherit;
      }

      .tab:hover {
        border-color: rgba(0, 0, 0, 0.35);
      }

      footer {
        margin-top: 64px;
        padding-top: 18px;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        opacity: 0.75;
        font-size: 13px;
      }

      /* ===== HERO + CIRCLE VIDEO ===== */
.hero {
  padding: 4rem 0;
}

.hero-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2.5rem;
}

.hero-copy {
  flex: 1;
  min-width: 280px;
}

.hero-media {
  width: 260px;
  height: 260px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  align-self: center;
}

.hero-video {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  object-position: center;
}

@media (max-width: 900px) {
  .hero-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  .hero-media {
    width: 220px;
    height: 220px;
    margin-top: 2rem;
  }
}

    </style>
  </head>

  <body>
    <main>
      <header>
        <a class="brand" href="/">Erika Gonzalez</a>

        <nav>
          <a class="tab" href="/">Home</a>
          <a class="tab" href="/about">About Me</a>
          <a class="tab" href="/cv">CV</a>
          <a class="tab" href="/projects">Projects</a>
          <a class="tab" href="/contact">Contact</a>
        </nav>
      </header>

      <slot />

      <footer>© {new Date().getFullYear()} Erika Gonzalez</footer>
    </main>
  </body>
</html>
