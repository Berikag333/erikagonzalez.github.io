---

<BaseLayout title="Projects | Erika González">
  <section class="projects">
    <h1>Projects</h1>

    <div class="project-list">
      {projects.map((p) => (
        <article class="project-card">
          <div class="project-header">
            <h2>{p.title}</h2>
            <p class="tools-line">{p.tools}</p>
          </div>

          <div class="project-body">
            <p><strong>Summary:</strong> {p.summary}</p>
            <p><strong>Problem:</strong> {p.problem}</p>
            <p><strong>Outcome:</strong> {p.outcome}</p>
          </div>

          <div class="project-actions">
            <a class="btn btn-primary" href={p.github} target="_blank" rel="noopener noreferrer">
              GitHub
            </a>

            {p.tableau && (
              <a class="btn btn-outline" href={p.tableau} target="_blank" rel="noopener noreferrer">
                Tableau
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
.projects {
  padding-top: 2rem;
  max-width: 980px;
  margin: 0 auto;
}

.project-list {
  margin-top: 1.5rem;
  display: grid;
  gap: 1.25rem;
}

.project-card {
  border: 1px solid #e5e7eb;
  border-radius: 16px;
  padding: 1.25rem 1.5rem;
  background: #ffffff;
}

.project-header h2 {
  margin: 0;
  font-size: 1.25rem;
}

.tools-line {
  margin: 0.35rem 0 0;
  color: #6b7280;
  font-size: 0.95rem;
}

.project-body {
  margin-top: 1rem;
  line-height: 1.65;
  color: #111827;
}

.project-body p {
  margin: 0 0 0.75rem;
}

.project-actions {
  margin-top: 1rem;
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.6rem 1.1rem;
  border-radius: 12px;
  font-weight: 700;
  text-decoration: none;
  border: 2px solid transparent;
}

.btn-primary {
  background: #111827;
  color: #fff;
}

.btn-outline {
  background: transparent;
  color: #111827;
  border-color: #111827;
}

.btn-primary:hover,
.btn-outline:hover {
  transform: translateY(-1px);
}
</style>
