---
import BaseLayout from "../layouts/BaseLayout.astro";

const cvUrl = "public/cv/Erika-Gonzalez-CV_2.pdf";
---

<BaseLayout title="CV | Erika González">
  <section class="cv-hero">
    <h1 class="cv-name">Erika González</h1>
    <p class="cv-title">Marketing & Data Analytics Professional</p>

    <p class="cv-summary">
      I work at the intersection of marketing, data, and business strategy, transforming complex data
      into actionable insights that drive growth and smarter decision-making.
    </p>

    <div class="cv-buttons">
      <!-- OPEN in browser -->
      <a class="btn btn-primary" href={cvUrl} target="_blank" rel="noopener noreferrer">
        Open CV (PDF)
      </a>

      <!-- FORCE download -->
      <a class="btn btn-outline" href={cvUrl} download>
        Download CV
      </a>
    </div>

    <!-- Optional: your icon row if you already have it -->
    <div class="cv-icons">
      <!-- Keep your existing icons here (GitHub/LinkedIn/etc.) -->
    </div>
  </section>

  <hr class="divider" />

  <!-- Embedded preview (optional but looks great like your screenshot) -->
  <section class="cv-preview">
    <iframe class="cv-frame" src={cvUrl} title="Erika González CV PDF"></iframe>
  </section>
</BaseLayout>

<style>
.cv-hero {
  text-align: center;
  padding-top: 2.5rem;
  padding-bottom: 2rem;
  max-width: 980px;
  margin: 0 auto;
}

.cv-name {
  font-size: 3rem;
  margin: 0;
}

.cv-title {
  margin-top: 0.75rem;
  font-size: 1.25rem;
  color: #6b7280;
  font-weight: 600;
}

.cv-summary {
  margin: 1.5rem auto 0;
  max-width: 760px;
  line-height: 1.6;
  color: #374151;
}

.cv-buttons {
  margin-top: 2rem;
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.9rem 1.6rem;
  border-radius: 12px;
  font-weight: 700;
  text-decoration: none;
  border: 2px solid transparent;
  min-width: 210px;
}

.btn-primary {
  background: #111827;
  color: white;
}

.btn-outline {
  background: transparent;
  color: #111827;
  border-color: #111827;
}

.btn-primary:hover,
.btn-outline:hover {
  transform: translateY(-1px);
}

.divider {
  margin: 2rem auto;
  max-width: 980px;
  border: none;
  border-top: 1px solid #e5e7eb;
}

.cv-preview {
  max-width: 980px;
  margin: 0 auto 3rem;
}

.cv-frame {
  width: 100%;
  height: 900px;
  border: 12px solid #6b7280;
  border-radius: 14px;
  background: white;
}

@media (max-width: 768px) {
  .cv-name {
    font-size: 2.2rem;
  }
  .cv-frame {
    height: 720px;
    border-width: 10px;
  }
}
</style>
